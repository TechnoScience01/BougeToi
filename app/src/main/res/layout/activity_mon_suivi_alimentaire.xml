<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MonSuiviAlimentaire">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Mon alimentation"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/arrow_back_ios_new_24dp_ffffff_fill0_wght400_grad0_opsz24"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp">

            <!-- Date Selector Card -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/dateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date du suivi"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/green2"/>

                    <DatePicker
                            android:id="@+id/datePicker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calories Progress Card -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/caloriesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/dateCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suivi calorique"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green2"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                        <TextView
                                android:id="@+id/actualCaloriesLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories consommées:"
                                android:textSize="16sp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>

                        <TextView
                                android:id="@+id/actuellesCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/green2"
                                android:layout_toEndOf="@id/actualCaloriesLabel"
                                android:layout_marginStart="8dp"
                                android:layout_centerVertical="true"/>

                        <TextView
                                android:id="@+id/caloriesTargetValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/ 2000"
                                android:textSize="16sp"
                                android:layout_toEndOf="@id/actuellesCalories"
                                android:layout_marginStart="4dp"
                                android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="8dp"
                            android:progressTint="@color/green2"
                            android:scaleY="1.5"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="12sp"
                                android:layout_alignParentStart="true"/>

                        <TextView
                                android:id="@+id/objectifCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2000"
                                android:textSize="12sp"
                                android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <!-- Macronutriments button -->
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/Voir_macronutriments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voir macronutriments"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="end"
                            app:cornerRadius="20dp"
                            android:backgroundTint="@color/green2"
                            android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Food List Card -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/foodListCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/caloriesCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aliments consommés"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/green2"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/button"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                app:icon="@android:drawable/ic_input_add"
                                app:iconTint="@color/white"
                                android:insetLeft="0dp"
                                android:insetTop="0dp"
                                android:insetRight="0dp"
                                android:insetBottom="0dp"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:cornerRadius="18dp"
                                android:backgroundTint="@color/green2"
                                android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <!-- Table Headers with style -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/light_green">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:text="Aliment"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="Quantité"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="Calories"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Table content -->
                    <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1">

                        <!-- No hard-coded rows here, they'll be added dynamically -->
                    </TableLayout>

                    <!-- Empty state message -->
                    <TextView
                            android:id="@+id/emptyStateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aucun aliment ajouté aujourd'hui.\nUtilisez le bouton + pour commencer votre suivi."
                            android:gravity="center"
                            android:padding="24dp"
                            android:textColor="@color/gray"
                            android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>