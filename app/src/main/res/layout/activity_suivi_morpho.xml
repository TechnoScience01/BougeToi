<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".SuiviMorpho">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="411dp"
            android:layout_height="112dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                tools:ignore="UselessParent"
                android:layout_height="match_parent" android:background="#8de683  ">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/flecheRetour" android:layout_weight="0.1" android:background="#8de683"
                    android:layout_gravity="center"
                    android:contentDescription="fleche_retour_description"
                    tools:srcCompat="@drawable/backarrow_white"/>
            <TextView
                    android:text="SUIVI PHYSIQUE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/titrePage"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textSize="24sp"
                    android:layout_gravity="center" android:gravity="center" android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>