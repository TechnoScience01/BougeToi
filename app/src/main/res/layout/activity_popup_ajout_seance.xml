<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".Popup_ajout_seance">

    <LinearLayout
            android:id="@+id/headerLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8de683"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="@string/ajouter_une_s_ance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"/>
    </LinearLayout>

    <EditText
            android:id="@+id/nomSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nom_de_la_s_ance"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nomSeance"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/selectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/selectionnez_une_date"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/dateLabel"
            app:layout_constraintStart_toEndOf="@+id/dateLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/dureeSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/duree_minutes"
            android:inputType="number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/descriptionSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description_optionnel"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dureeSeance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
            android:id="@+id/seanceTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionSeance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/exercisesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selectionnez_les_exercices"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/seanceTypeSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
            android:id="@+id/exercisesScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/exercisesHeader"
            app:layout_constraintBottom_toTopOf="@+id/exerciseButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:id="@+id/exercisesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Checkboxes will be added here dynamically -->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:id="@+id/exerciseButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/exercisesScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:id="@+id/cancelExercisesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/annuler"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#AAAAAA"/>

        <Button
                android:id="@+id/confirmExercisesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirmer"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/vert"/>
    </LinearLayout>

    <TextView
            android:id="@+id/selectedExercisesText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/exerciseButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/selectedExercisesText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/selectedExercisesText1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

        <Button
                android:id="@+id/annulerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/annuler"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#AAAAAA"/>

        <Button
                android:id="@+id/confirmerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirmer"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/vert"
                android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>